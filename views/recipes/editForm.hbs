<form method="POST" action="/recipes?_method=PUT">

  Name:<input type="text" value="{{recipe.name}}" placeholder="name" name="name" />
  Ingredients:<input type="text" value="{{recipe.ingredients.name}}" placeholder="ingredients" name="ingredients" />
  Cook time:<input type="number" value="{{recipe.cooktime}}" placeholder="cook time" name="cooktime" />
  Directions<input type="text" value="{{recipe.directions}}" placeholder="directions" name="directions" />
  Comments:<input type="text" value="{{recipe.comment}}" placeholder="comments" name="comment" />

  <input type="submit" value="Update Recipe" />
</form>


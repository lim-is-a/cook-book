<form method="POST" action="/recipes?_method=PUT">

  Name:<input type="text" value="{{recipe.name}}" placeholder="name" name="name" /><br>

  Image: <input type="text" placeholder="image address" name="Image" /> <br>

  {{!-- Ingredients:<input type="text" value="{{recipe.ingredients.name}}" placeholder="ingredients" name="ingredients" /><br> --}}
  <form method="POST" action="/recipe.ingredients">
    Ingredients: <input type="text" placeholder="name" name="name" />
    Quantity:<input type="number" placeholder="quantity" name="quantity" />
    Unit of measurement:
    <select id="units" name="units">
      <option value="" placeholder='unit'></option>
      <option value="ounce">Ounce</option>
      <option value="cup">Cup</option>
      <option value="pound">Pound</option>
      <option value="teaspoon">Teaspoon</option>
      <option value="tablespoon">Tablespoon</option>
      <option value="fluid ounce">Fluid Ounce</option>
    </select>
    <input type="submit" value="Add ingredients" />
  </form>

  Cook time:<input type="number" value="{{recipe.cooktime}}" name="cooktime" /><br>

  {{!-- Directions:<input type="text" value="{{recipe.directions}}"name="directions" /><br> --}}
  Directions:
  <textarea type="text" name="directions" cols="30" rows="10" />
  {{recipe.directions}} 
  </textarea><br>

  Comments:<input type="text" value="{{recipe.comment}}" name="comment" /><br>

  <input type="submit" value="Update Recipe" />

</form>

